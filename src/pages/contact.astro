---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Build Formspree action URL from environment variable if available
const formId = import.meta.env.PUBLIC_FORMSPREE_ID;
const formAction = formId ? `https://formspree.io/f/${formId}` : '#';
---

<Layout title="Contact & FAQ - Championnat de Lancer d'Avions en Papier">
  <Header />
  
  <!-- Page Header -->
  <section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-16">
    <div class="container text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-orange-400">Contact</h1>
      <p class="text-xl">&</p>
      <h2 class="text-3xl md:text-4xl font-bold text-orange-400">FAQ</h2>
    </div>
  </section>

  <main>
    <!-- Contact Section -->
    <section class="py-16">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold mb-6">Où et Quand ?</h2>
            
            <div class="space-y-6 mb-8">
              <p class="text-lg">
                <strong>Samedi 17 Mai 2025 à Midi</strong> au Complexe Sportif Daniel Colombier à Mérignac
              </p>
              
              <div class="bg-blue-50 rounded-lg p-6">
                <h3 class="text-xl font-bold mb-3">Email</h3>
                <a href="mailto:bonjour@championnatavionpapier.fr" class="text-blue-600 hover:text-blue-800 text-lg">
                  bonjour@championnatavionpapier.fr
                </a>
              </div>
              
              <div class="bg-orange-50 rounded-lg p-6">
                <h3 class="text-xl font-bold mb-3">S.O.S. ?</h3>
                <p class="text-lg mb-4">
                  Pour toutes questions urgentes le jour du Championnat, contactez-nous au :
                </p>
                <a href="tel:+33699702305" class="text-2xl font-bold text-orange-600 hover:text-orange-700">
                  06 99 70 23 05
                </a>
              </div>
              
              <div class="flex gap-4">
                <a href="https://www.facebook.com/rotarymerignac" class="bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
                <a href="https://www.instagram.com/rotarymerignac/" class="bg-gradient-to-r from-purple-600 to-pink-600 text-white p-3 rounded-lg hover:from-purple-700 hover:to-pink-700 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                  </svg>
                </a>
                <a href="https://www.linkedin.com/company/rotary-club-merignac/" class="bg-blue-700 text-white p-3 rounded-lg hover:bg-blue-800 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
                <a href="https://www.youtube.com/@RotaryMerignac" class="bg-red-600 text-white p-3 rounded-lg hover:bg-red-700 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                </a>
              </div>
            </div>

            <button id="add-to-calendar" class="btn-secondary w-full">
              Ajouter au calendrier 📅
            </button>
          </div>

          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold mb-6">Envoyez-nous un message</h2>
            
            <form class="space-y-4" action={formAction} method="POST">
              <div>
                <label for="name" class="block text-sm font-medium mb-2">Nom *</label>
                <input type="text" id="name" name="name" required 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium mb-2">Email *</label>
                <input type="email" id="email" name="email" required 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium mb-2">Message</label>
                <textarea id="message" name="message" rows="6" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
              </div>
              
              <button type="submit" class="btn-primary w-full">
                Envoyer
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-8">
      <div class="container">
        <div class="bg-gray-100 rounded-lg overflow-hidden h-96">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2829.234897893844!2d-0.6459047!3d44.8322194!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd54d803d3e8b7cf%3A0x28dc493e5df34929!2sComplexe%20Sportif%20Daniel%20Colombier!5e0!3m2!1sfr!2sfr!4v1645789456123!5m2!1sfr!2sfr"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-gray-50">
      <div class="container">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-orange-500">FAQ</h2>
        
        <div class="max-w-3xl mx-auto space-y-6">
          <!-- Tarif -->
          <details class="bg-white rounded-lg shadow-md">
            <summary class="px-6 py-4 cursor-pointer hover:bg-gray-50 flex items-center justify-between">
              <span class="text-xl font-semibold flex items-center gap-3">
                <span>💰</span> Tarif
              </span>
              <svg class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-4">
              <p class="text-gray-700">L'entrée est gratuite pour les spectateurs. La participation au championnat est de 10€ par personne.</p>
            </div>
          </details>

          <!-- Animations -->
          <details class="bg-white rounded-lg shadow-md">
            <summary class="px-6 py-4 cursor-pointer hover:bg-gray-50 flex items-center justify-between">
              <span class="text-xl font-semibold flex items-center gap-3">
                <span>🎭</span> Animations
              </span>
              <svg class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-4">
              <ul class="space-y-2 text-gray-700">
                <li>• Cockpit d'avion de chasse accessible</li>
                <li>• Ateliers de pliage d'avions en papier</li>
                <li>• Montage de maquettes d'avions</li>
                <li>• Simulateur de vol</li>
                <li>• Stand de restauration et buvette</li>
              </ul>
            </div>
          </details>

          <!-- Restauration -->
          <details class="bg-white rounded-lg shadow-md">
            <summary class="px-6 py-4 cursor-pointer hover:bg-gray-50 flex items-center justify-between">
              <span class="text-xl font-semibold flex items-center gap-3">
                <span>🍔</span> Restauration
              </span>
              <svg class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-4">
              <p class="text-gray-700">Une buvette et un stand de restauration seront disponibles sur place avec des sandwichs, boissons et snacks.</p>
            </div>
          </details>

          <!-- Horaires -->
          <details class="bg-white rounded-lg shadow-md">
            <summary class="px-6 py-4 cursor-pointer hover:bg-gray-50 flex items-center justify-between">
              <span class="text-xl font-semibold flex items-center gap-3">
                <span>🕐</span> Horaires du Championnat
              </span>
              <svg class="w-5 h-5 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </summary>
            <div class="px-6 pb-4">
              <div class="space-y-3 text-gray-700">
                <div class="flex justify-between items-center py-2 border-b">
                  <span class="font-semibold">Midi - 15h00</span>
                  <span>QUALIFICATIONS - Épreuves de distance et de durée</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b">
                  <span class="font-semibold">15h30</span>
                  <span>FINALES - Les meilleurs dans chaque catégorie s'affrontent</span>
                </div>
                <div class="flex justify-between items-center py-2">
                  <span class="font-semibold">FIN DE JOURNÉE</span>
                  <span>CÉRÉMONIE DE CLÔTURE</span>
                </div>
              </div>
            </div>
          </details>
        </div>
      </div>
    </section>
  </main>

  <script>
    const btn = document.getElementById('add-to-calendar');
    if (btn) {
      btn.addEventListener('click', () => {
        const title = "Championnat du Monde de Lancer d'Avions en Papier 2025";
        const description = "Championnat du Monde de Lancer d'Avions en Papier à Mérignac";
        const location = "Complexe Sportif Daniel Colombier, Mérignac, France";
        const start = new Date('2025-05-17T10:00:00Z');
        const end = new Date('2025-05-17T17:00:00Z');
        const format = (date) => date.toISOString().replace(/[-:]/g, '').split('.')[0] + 'Z';
        const ics = [
          'BEGIN:VCALENDAR',
          'VERSION:2.0',
          'BEGIN:VEVENT',
          `DTSTART:${format(start)}`,
          `DTEND:${format(end)}`,
          `SUMMARY:${title}`,
          `DESCRIPTION:${description}`,
          `LOCATION:${location}`,
          'END:VEVENT',
          'END:VCALENDAR'
        ].join('\n');
        const blob = new Blob([ics], { type: 'text/calendar' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'championnat-avion-papier-2025.ics';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      });
    }
  </script>

  <Footer />
</Layout>

<style>
  details[open] summary svg {
    transform: rotate(180deg);
  }
</style>