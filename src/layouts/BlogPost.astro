---
/**
 * @typedef {'Tutoriels' | 'Techniques' | 'Compétition' | 'Actualités'} Category
 *
 * @param {object} props
 * @param {string} props.title
 * @param {string} props.description
 * @param {Date} props.publishDate
 * @param {string=} props.author
 * @param {Category} props.category
 * @param {string[]=} props.tags
 * @param {string=} props.image
 * @param {string=} props.imageAlt
 * @param {number=} props.readingTime
 */
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  author?: string;
  category: 'Tutoriels' | 'Techniques' | 'Compétition' | 'Actualités';
  tags?: string[];
  image?: string;
  imageAlt?: string;
  readingTime?: number;
}

const { 
  title, 
  description, 
  publishDate, 
  author = 'Équipe Championnat',
  category,
  tags = [],
  image,
  imageAlt,
  readingTime
} = Astro.props;

const formattedDate = new Date(publishDate).toLocaleDateString('fr-FR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const categoryColors = {
  'Tutoriels': 'bg-green-100 text-green-800',
  'Techniques': 'bg-blue-100 text-blue-800',
  'Compétition': 'bg-orange-100 text-orange-800',
  'Actualités': 'bg-purple-100 text-purple-800',
};

const categoryColor = categoryColors[category] || 'bg-gray-100 text-gray-800';
---

<Layout title={`${title} - Championnat du Monde de Lancer d'Avions en Papier`}>
  <Header />
  
  <main>
    <!-- Article Header -->
    <article class="py-8 md:py-16">
      <div class="container max-w-4xl">
        <!-- Breadcrumb -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li>
              <a href="/" class="hover:text-blue-600">Accueil</a>
            </li>
            <li>/</li>
            <li>
              <a href="/blog" class="hover:text-blue-600">Articles</a>
            </li>
            <li>/</li>
            <li class="text-gray-900 font-medium">{title}</li>
          </ol>
        </nav>

        <!-- Article Meta -->
        <div class="mb-8">
          <div class="flex flex-wrap items-center gap-4 mb-4">
            <span class={`px-3 py-1 rounded-full text-sm font-semibold ${categoryColor}`}>
              {category}
            </span>
            <time datetime={publishDate.toISOString()} class="text-gray-600">
              {formattedDate}
            </time>
            {readingTime && (
              <span class="text-gray-600">
                {readingTime} min de lecture
              </span>
            )}
          </div>
          
          <h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4">
            {title}
          </h1>
          
          <p class="text-xl text-gray-600 mb-4">
            {description}
          </p>
          
          <div class="flex items-center gap-4 text-sm text-gray-600">
            <span>Par <strong>{author}</strong></span>
          </div>
        </div>

        <!-- Featured Image -->
        {image && (
          <div class="mb-12 rounded-lg overflow-hidden shadow-lg">
            <img 
              src={image} 
              alt={imageAlt || title}
              class="w-full h-auto"
              loading="eager"
            />
          </div>
        )}

        <!-- Article Content -->
        <div class="prose-content max-w-none text-gray-700">
          <slot />
        </div>

        <!-- Tags -->
        {tags.length > 0 && (
          <div class="mt-12 pt-8 border-t border-gray-200">
            <div class="flex flex-wrap items-center gap-2">
              <span class="text-gray-700 font-semibold">Tags:</span>
              {tags.map((tag) => (
                <a 
                  href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                  class="px-3 py-1 bg-gray-100 hover:bg-gray-200 rounded-full text-sm text-gray-700 transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Navigation -->
        <nav class="mt-12 pt-8 border-t border-gray-200">
          <div class="flex justify-between items-center">
            <a 
              href="/blog"
              class="text-blue-600 hover:text-blue-800 font-semibold flex items-center gap-2"
            >
              <svg 
                class="w-5 h-5"
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M15 19l-7-7 7-7"
                />
              </svg>
              Retour aux articles
            </a>
          </div>
        </nav>
      </div>
    </article>

    <!-- Related Articles Section -->
    <section class="py-16 bg-gray-50">
      <div class="container">
        <h2 class="text-3xl font-bold text-center mb-8">Articles Similaires</h2>
        <p class="text-center text-gray-600 mb-8">
          Découvrez d'autres articles qui pourraient vous intéresser
        </p>
        <!-- This would be populated dynamically with related posts -->
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .prose-content h2 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #111827;
  }
  
  .prose-content h3 {
    font-size: 1.25rem;
    font-weight: bold;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #111827;
  }
  
  .prose-content p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }
  
  .prose-content ul {
    list-style-type: disc;
    list-style-position: inside;
    margin-bottom: 1rem;
  }
  
  .prose-content ul li {
    margin-left: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .prose-content ol {
    list-style-type: decimal;
    list-style-position: inside;
    margin-bottom: 1rem;
  }
  
  .prose-content ol li {
    margin-left: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .prose-content strong {
    font-weight: 600;
    color: #111827;
  }
  
  .prose-content blockquote {
    border-left: 4px solid #3B82F6;
    padding-left: 1rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-style: italic;
    background-color: #EFF6FF;
    border-radius: 0 0.25rem 0.25rem 0;
  }
  
  .prose-content code {
    background-color: #F3F4F6;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: monospace;
  }
  
  .prose-content pre {
    background-color: #111827;
    color: #F3F4F6;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }
  
  .prose-content a {
    color: #2563EB;
    text-decoration: underline;
  }
  
  .prose-content a:hover {
    color: #1E40AF;
  }
  
  .prose-content img {
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>