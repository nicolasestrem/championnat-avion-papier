---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<!--
  Heads up!

  This component is a static component that does not receive any props.
-->
<footer class="bg-gray-900 text-white py-8 mt-16">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Column 1: Blog Articles -->
      <div>
        <h3 class="text-xl font-bold mb-4">Articles Récents</h3>
        <div class="space-y-3">
          {recentPosts.map((post) => (
            <article class="border-l-4 border-orange-500 pl-3">
              <h4 class="font-semibold hover:text-orange-400 transition-colors">
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h4>
              <p class="text-sm text-gray-400 mt-1">
                {new Date(post.data.publishDate).toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </p>
            </article>
          ))}
        </div>
      </div>

      <!-- Column 2: Quick Links -->
      <div>
        <h3 class="text-xl font-bold mb-4">Liens Rapides</h3>
        <ul class="space-y-2">
          <li><a href="/" class="hover:text-orange-400 transition-colors">Accueil</a></li>
          <li><a href="/contact" class="hover:text-orange-400 transition-colors">Contact - FAQ</a></li>
          <li><a href="https://www.rotary-merignac.fr/" class="hover:text-orange-400 transition-colors">Rotary Mérignac</a></li>
          <li><a href="/politique-de-confidentialite" class="hover:text-orange-400 transition-colors">Politique de confidentialité</a></li>
        </ul>
      </div>

      <!-- Column 3: Social & Contact -->
      <div>
        <h3 class="text-xl font-bold mb-4">Restez Connecté</h3>
        <div class="flex gap-4 mb-4">
          <a
            href="https://www.facebook.com/rotarymerignac"
